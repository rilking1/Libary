@model IEnumerable<Libary.Data.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a class="btn btn-primary mb-3" type="=submit" asp-area="" asp-controller="Autors" asp-action="Import">Завантажити з файлу</a>
<a class="btn btn-primary mb-3" type="=submit" asp-area="" asp-controller="Autors" asp-action="Export">Експортувати у файл</a>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ім'я Автора
            </th>
            <th>
                Псевдонім
            </th>
            <th>
                Регіон
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AutorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pseudonym)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.RegionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

