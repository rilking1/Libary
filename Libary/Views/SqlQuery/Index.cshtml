@model Libary.Data.SqlQuery

@{
    ViewData["Title"] = "SQL Query Executor";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ExecuteQuery" method="post">
    <div class="form-group">
        <label for="Query">SQL Query</label>
        <textarea asp-for="Query" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label for="ParameterName">Parameter Name</label>
        <input asp-for="ParameterName" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="ParameterValue">Parameter Value</label>
        <input asp-for="ParameterValue" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Execute</button>
</form>

@if (!string.IsNullOrEmpty(Model.Result))
{
    <div class="mt-4">
        <h2>Result</h2>
        <div>@Html.Raw(Model.Result)</div>
    </div>
}